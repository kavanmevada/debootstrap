FROM cross-stage-12 AS cross-stage-13
WORKDIR $LFS/sources
RUN while true;do wget -T 15 https://ftp.gnu.org/gnu/tar/tar-1.34.tar.xz && break; done
RUN tar -xvJ -C $LFS/sources -f tar-*.xz && rm tar-*.xz \
